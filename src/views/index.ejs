<!DOCTYPE html>
<html lang="en">
<%- include('partial/head',{ title:'INDEX' }) %>

    <body class="home">
        <%- include('partial/header') %>
            <main class="home__main">

                <!-- CARRUSEL AUTOMATICO-->
                <div class="container">
                    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/banner/banner5.webp" class="d-block w-100" alt="imgCarrousel">
                            </div>
    
                            <div class="carousel-item">
                                <img src="/images/banner/banner4.webp" class="d-block w-100" alt="imgCarrousel">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/banner/banner_celu.webp" class="d-block w-100" alt="imgCarrousel">
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- FIN CARRUSEL AUTOMATICO-->

                <!-- BOTON FILTRO-->
                <div>
                    <div class="btn-group">

                        <button class="btn btn-info dropdown-toggle mb-5" type="button" data-bs-toggle="dropdown"
                            data-bs-auto-close="inside" aria-expanded="false" style="margin-top: 15px;">
                            Ver solo
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/products/celulares">Celulares</a></li>
                            <li><a class="dropdown-item" href="/products/accesoriosParaCelu">Accesorios</a></li>
                        </ul>
                    </div>
                </div>
                <!-- FIN BOTON FILTRO-->

                <!-- PRODUCTOS MAS NUEVOS-->
