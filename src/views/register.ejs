<!DOCTYPE html>
<html lang="en">
<%- include('partial/head',{ title: 'REGISTER' }) %>

  <body class="registro">
    <%- include('partial/header') %>
      <main class="container mt-5">
        <div class="row mb-5">
          <div class="col-12 col-md-10 col-lg-8 mx-auto">
            <div class="card shadow">
              <div class="card-body">
                <h4>Registrate</h4>
                <hr>

                <form id="formRegister" class="row" method="POST" enctype="multipart/form-data">
                  <div class="col-12 col-md-6 mb-3">
                    <label class="form-label" for="name">Nombre</label>
                    <input class="form-control  <%= locals.errors && (errors.name && 'is-invalid') %>" type="text"
                      id="name" name="name" value="<%= locals.old && (old.name && old.name) %>" />
                    <small id="msgError-name" class="ms-2 text-danger">
                      <%= locals.errors && (errors.name && errors.name.msg) %>
                    </small>
                  </div>

                  <div class="col-12 col-md-6 mb-3">
                    <label class="form-label" for="surname">Apellido</label>
                    <input class="form-control <%= locals.errors && (errors.surname && 'is-invalid') %>" type="text"
                      id="surname" name="surname" value="<%= locals.old && (old.surname&& old.surname) %>" />
                    <small id="msgError-surname" class="ms-2 text-danger">
                      <%= locals.errors && (errors.surname && errors.surname.msg) %>
                    </small>
                  </div>

                  <div class="col-12 mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control <%= locals.errors && (errors.email && 'is-invalid') %>" type="email"
                      id="email" name="email" value="<%= locals.old && (old.email && old.email) %>" />
                    <small id="msgError-email" class="ms-2 text-danger">
                      <%= locals.errors && (errors.email && errors.email.msg) %>
                    </small>
                  </div>

                  <div class="col-12 col-md-6 mb-3">
                    <label class="form-label" for="password">Contraseña</label>
                    <div class="input-group mb-3">
                      <input class="form-control <%= locals.errors && (errors.password && 'is-invalid') %>"
                        type="password" id="password" name="password" />
                      <span class="input-group-text"><i id="viewPassword" class="fa fa-eye"></i></span>
                    </div>
                    <small id="msgError-password" class="ms-2 text-danger">
                      <%= locals.errors && (errors.password && errors.password.msg) %>
                    </small>
                  </div>

                  <div class="col-12 col-md-6 mb-3">
                    <label class="form-label" for="password2">Confirma contraseña</label>
                    <div class="input-group mb-3">
                      <input class="form-control <%= locals.errors && (errors.password2 && 'is-invalid') %>"
                        type="password" id="password2" name="password2" />
                      <span class="input-group-text"><i id="viewPassword2" class="fa fa-eye"></i></span>
                    </div>
                    <small id="msgError-password2" class="ms-2 text-danger">
                      <%= locals.errors && (errors.password2 && errors.password2.msg) %>
                    </small>
                  </div>

                  <div class="col-12 col-md-6 mb-3">
                    <label for="image" class="form-label">Agregar imagen</label>
                    <input class="form-control <%= locals.errors && (errors.image && 'is-invalid') %>" type="file"
                      id="image" name="image" />
                    <a href="/users/login" style="font-size: 10px;">Ya tengo cuenta</a>
                    <small class="ms-2 text-danger">
                      <%= locals.errors && (errors.image && errors.image.msg) %>
                    </small>
                  </div>

                  <div class="d-grid gap-2 d-md-block text-left">
                    <small id="msgError-empty" class="ms-2 text-danger"></small>
                    <div class="d-flex justify-content-end">
                      <button class="btn btn-sm btn-dark" type="submit">Registrate</button>
                      <button class="btn btn-sm btn-danger"><a href="/" style="color: white">Cancelar</a></button>
                    </div>
                  </div>

                </form>

              </div>
            </div>
          </div>
        </div>
      </main>
      <script src="/javascripts/validationRegister.js"></script>
  </body>
  <%- include('partial/footer') %>

</html>