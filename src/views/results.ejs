<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partial/head',{ title:'resultado de tu busqueda' }) %>

	<body class="home">
		<%- include('partial/header') %>

			<!-- todos los productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="text-center text-decoration-underline mb-5">Resultados de la búsqueda: <%= keywords
								%>
						</h2>
					</div>
					<% if (results.length) { %>
						<% results.forEach(product=> { %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/products/detalle/<%= product.id %>">
										<figure class="product-box_image">
											<img src="/images/detalle/<%= product.imagen %>" alt="imagen de producto">
										</figure>
										<p class="text-success fs-2">
											<%= product.modelo %>
										</p>
										<a href="/products/detalle/<%= product.id %>"
											class="btn btn-outline-primary">ver más</a>
										</article>
									</a>
								</section>
							</div>
							<% }) %>
								<% }else{ %>
									<div class="col-12">
										<h2 class=" text-start mt-5" style="color:aqua;">No hay productos que coincidan
											con esa búsqueda</h2>
									</div>
									<% } %>
				</div>
			</div>
			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('partial/footer') %>
				<!-- /footer -->
	</body>

</html>